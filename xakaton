    donate_toys = ft.TextField(label="Пожертвование на игрушки", width=500)

    def donate(shelter):
        page.add(ft.Text(value=f"Спасибо за пожертвование в фонд {shelter.value}"))

    def don(e):
        page.controls.clear()
        page.add(
            ft.IconButton(
                icon=ft.icons.CHECK_CIRCLE,
                on_click=lambda e: donate(shelter_verny)
            ),
            donate_food,
            donate_toys,
            ft.IconButton(
                icon=ft.icons.CHECK_CIRCLE,
                on_click=lambda e: donate(shelter_verny)
            )
