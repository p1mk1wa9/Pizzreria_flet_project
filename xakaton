import flet as ft

def shelters(page: ft.Page):
    img = ft.Image(
        src=f"https://i.otzovik.com/objects/b/1200000/1192539.png",
        width=220,
        height=220,
        fit=ft.ImageFit.CONTAIN,
    )

    img2 = ft.Image(
